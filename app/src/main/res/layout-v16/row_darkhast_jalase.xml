<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView

        android:id="@+id/cardViewTxDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="2dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:textDirection="rtl"
        card_view:cardBackgroundColor="#abb6c0"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_date"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/txDateAsli"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:gravity="center"
                    android:text="afsasf"
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardBackgroundColor="#ffffff"
            android:layoutDirection="ltr"
            android:textDirection="rtl"
            >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clDarkhastMorkhasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintVertical_bias="1.0">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clVaziyatTaeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                card_view:layout_constraintBottom_toBottomOf="@+id/txTarikhDarkhast"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="@+id/txTarikhDarkhast">

                <TextView
                    android:id="@+id/txVaziyatTaeid"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rmedium"
                    android:padding="3dp"
                    android:text="وضعیت تایید:"
                    android:textSize="14sp"
                    android:visibility="visible"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imgVaziyatTaeid"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="visible"
                    card_view:layout_constraintBottom_toBottomOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintEnd_toStartOf="@+id/txVaziyatTaeid"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="@+id/txVaziyatTaeid"
                    card_view:srcCompat="@drawable/dar_entezar_teeid" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txNameFrestande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="نام فرستنده"
                android:textColor="#3886c7"
                android:textSize="15sp"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="@+id/txAzYaBe"
                card_view:layout_constraintEnd_toStartOf="@+id/txAzYaBe"
                card_view:layout_constraintTop_toTopOf="@+id/txAzYaBe" />

            <TextView
                android:id="@+id/txAzYaBe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="از"
                android:textColor="#3886c7"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imgIconDate4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage10"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage10"
                card_view:srcCompat="@drawable/date_icon" />

            <TextView
                android:id="@+id/txMatnMozo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="موضوع:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/txNameFrestande" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="در تاریخ:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="@+id/txMatnMozo"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnMozo" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="مخاطبین:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage4"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage4" />

            <TextView
                android:id="@+id/txMokhatabin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="مخاطب یک"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage8"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage8"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage4" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="مکان:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage8"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage8" />

            <TextView
                android:id="@+id/txMakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="مکان یک"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage9"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage9"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage9" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="توضیحات:"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toEndOf="@+id/txOnvanRecevedMessage9"
                card_view:layout_constraintTop_toBottomOf="@+id/txOnvanRecevedMessage9" />

            <TextView
                android:id="@+id/txTozihat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="توضیحات یک"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage10"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage10"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage10" />

            <TextView
                android:id="@+id/txOnvanRecevedMessage6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="تاریخ درخواست:"
                android:textColor="#a1aab3"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/imgIconDate4"
                card_view:layout_constraintEnd_toStartOf="@+id/imgIconDate4"
                card_view:layout_constraintTop_toTopOf="@+id/imgIconDate4" />

            <TextView
                android:id="@+id/txMozo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rmedium"
                android:padding="3dp"
                android:text="موضوع یک"
                android:textColor="#000000"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txMatnMozo"
                card_view:layout_constraintEnd_toStartOf="@+id/txMatnMozo"
                card_view:layout_constraintTop_toTopOf="@+id/txMatnMozo" />

            <TextView

                android:id="@+id/txDarTarikh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#000000"
                android:textDirection="ltr"
                android:textSize="15sp"
                card_view:layout_constraintEnd_toStartOf="@+id/txSaat"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage4" />

            <TextView

                android:id="@+id/txSaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##:##"
                android:textColor="#000000"
                android:textDirection="ltr"
                android:textSize="15sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage4"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage4"
                card_view:layout_constraintTop_toBottomOf="@+id/txMatnMozo" />

            <TextView
                android:id="@+id/txTarikhDarkhast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:fontFamily="@font/rmedium"
                android:layoutDirection="ltr"
                android:padding="3dp"
                android:text="##/##/##"
                android:textColor="#a1aab3"
                android:textDirection="ltr"
                android:textSize="14sp"
                card_view:layout_constraintBottom_toBottomOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintEnd_toStartOf="@+id/txOnvanRecevedMessage6"
                card_view:layout_constraintTop_toTopOf="@+id/txOnvanRecevedMessage6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</LinearLayout>